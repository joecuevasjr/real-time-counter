@page
@model StreamingModel

@{
    ViewData["Title"] = "Streaming Page";
}

<h1>Number Stream</h1>

<form method="post">
    <label for="upperBound">Enter Upper Bound:</label>
    <input type="number" id="upperBound" name="UpperBound" required />

    <div id="pairs">
        <div class="pair">
            <input type="number" name="Numbers" placeholder="Number" required />
            <input type="text" name="Names" placeholder="Name" required />
        </div>
    </div>
    <button type="button" onclick="addPair()">Add Pair</button>
    <button type="submit">Start Stream</button>
</form>

<div id="numberStream"></div>

<script>
    function addPair() {
        const container = document.getElementById('pairs');
        const newPair = document.createElement('div');
        newPair.className = 'pair';
        newPair.innerHTML = `
                <input type="number" name="Numbers" placeholder="Number" required />
                <input type="text" name="Names" placeholder="Name" required />
            `;
        container.appendChild(newPair);
    }
</script>